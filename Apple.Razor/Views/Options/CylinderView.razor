@* 引入气缸选项视图模型命名空间 *@
@using Apple.Razor.ViewModels.Options
@* 引入气缸控制相关的用户控件命名空间 *@
@using Core.UI.Razor.UserCtrls.Cylinder
@* 引入核心UI基础功能命名空间 *@
@using Core.UI.SeedWork
@* 注入气缸视图模型，用于处理气缸配置逻辑 *@
@inject CylinderVM Model
@* 注入登录视图模型，用于检查用户权限 *@
@inject LoginVM LoginVM;

@* 气缸配置页面的主容器 *@
<div class="style-div8">
    @* 顶部工具栏，使用边框样式 *@
    <div class="style-div9 sty-border1">
        @* 气缸类型选择区域 *@
        <div class="style-div10">
            @* 遍历气缸字典，显示每种类型的选择按钮 *@
            @foreach (var t in Model.CylinderDic)
            {
                @* 气缸类型选择按钮，点击时切换到对应的气缸列表 *@
                <MyButton Class="style-button1 style-button4" ClassChecked="style-button100" IsChecked=@(Model.Cylinders==t.Value) @onclick="@(e=>Model.Cylinders=t.Value)">@t.Key</MyButton>
            }
        </div>
    </div>
    @* 气缸列表显示区域 *@
    <div class="style-div11 div1">
        @* 遍历当前选中的气缸列表 *@
        @foreach (var t in Model.Cylinders)
        {
            @* 每个气缸的配置容器，使用边框样式 *@
            <div class="sty-border1" style="height:120px;width:320px;margin:0px 8px 16px 8px;padding:0px 8px 0px 8px;">
                @* 使用气缸控制组件显示每个气缸的配置，根据用户权限设置是否只读 *@
                <CtrlCylinder ReadOnly="!LoginVM.IsAdmin" Model="@t" Style="height:100%;" />
            </div>
        }
    </div>
</div>

